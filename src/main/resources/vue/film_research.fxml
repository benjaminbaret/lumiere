<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vue.FilmResearch">
   <children>
      <ScrollPane>
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="597.0" prefWidth="995.0" style="-fx-background-color: black;">
               <children>
                  <ImageView fitHeight="501.0" fitWidth="896.0" layoutX="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/inglorious_basterds.jpg" />
                     </image>
                  </ImageView>
                  <ToolBar layoutX="3.0" layoutY="540.0" prefHeight="40.0" prefWidth="997.0" style="-fx-background-color: black;">
                     <items>
                        <Button mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #506FFF;" text="Erase" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <ComboBox fx:id="filmChoiceBox" onAction="#actionChoiceDoneFilm" prefHeight="35.0" prefWidth="240.0" promptText="Title" style="-fx-background-color: white;" />
                        <ComboBox fx:id="dateComboBox" onAction="#actionChoiceDoneDate" prefHeight="35.0" prefWidth="240.0" promptText="Release date" style="-fx-background-color: white;" />
                        <ComboBox fx:id="timeComboBox" onAction="#actionChoiceDoneTime" prefHeight="35.0" prefWidth="240.0" promptText="Duration" style="-fx-background-color: white;" />
                        <Button mnemonicParsing="false" onAction="#buttonEraseClicked" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #506FFF;" text="QUICK BOOK" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                     </items>
                  </ToolBar>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#backToChoiceButton" prefHeight="30.0" style="-fx-background-color: #506FFF;" text="X" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
